{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es6", "es2017", "es7"],
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "package.json",
    "."
  ]
}
